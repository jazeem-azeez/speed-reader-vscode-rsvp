{
    "name": "rsvp-speed-reader",
    "displayName": "RSVP Speed Reader",
    "description": "Rapid Serial Visual Presentation speed reading for Markdown, text, PDF, and EPUB files with ORP highlighting, keyboard controls, and performance-optimized processing.",
    "version": "0.1.0",
    "publisher": "rsvp-speed-reader",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/rsvp-speed-reader"
    },
    "bugs": {
        "url": "https://github.com/yourusername/rsvp-speed-reader/issues"
    },
    "homepage": "https://github.com/yourusername/rsvp-speed-reader#readme",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "speed reading",
        "rsvp",
        "reading",
        "productivity",
        "pdf",
        "epub",
        "markdown"
    ],
    "activationEvents": [
        "onLanguage:markdown",
        "onLanguage:plaintext",
        "onCommand:rsvp.speedReadCurrentFile",
        "onCommand:rsvp.speedReadFile"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "rsvp.speedReadCurrentFile",
                "title": "RSVP: Speed Read Current File"
            },
            {
                "command": "rsvp.speedReadFile",
                "title": "RSVP: Speed Read File/Folder"
            },
            {
                "command": "rsvp.queueFile",
                "title": "RSVP: Queue File/Folder"
            }
        ],
        "keybindings": [
            {
                "command": "rsvp.speedReadCurrentFile",
                "key": "ctrl+alt+r",
                "mac": "cmd+alt+r",
                "when": "editorLangId == markdown || editorLangId == plaintext || resourceExtname == .pdf || resourceExtname == .epub"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "rsvp.speedReadFile",
                    "when": "resourceExtname == .md || resourceExtname == .markdown || resourceExtname == .txt || resourceExtname == .pdf || resourceExtname == .epub || explorerResourceIsFolder == true",
                    "group": "navigation"
                },
                {
                    "command": "rsvp.queueFile",
                    "when": "resourceExtname == .md || resourceExtname == .markdown || resourceExtname == .txt || resourceExtname == .pdf || resourceExtname == .epub || explorerResourceIsFolder == true",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "RSVP Speed Reader",
            "properties": {
                "rsvp.defaultWPM": {
                    "type": "number",
                    "default": 450,
                    "minimum": 100,
                    "maximum": 1200,
                    "description": "Default words per minute for speed reading"
                },
                "rsvp.wordsPerChunk": {
                    "type": "number",
                    "default": 1,
                    "minimum": 1,
                    "maximum": 5,
                    "description": "Number of words to display at once (1 = traditional RSVP, 2-5 = chunk reading)"
                },
                "rsvp.fontFamily": {
                    "type": "string",
                    "default": "monospace",
                    "description": "Font family for the reading display"
                },
                "rsvp.bodyFontSize": {
                    "type": "number",
                    "default": 48,
                    "minimum": 24,
                    "maximum": 120,
                    "description": "Body text font size in pixels"
                },
                "rsvp.titleFontSizeH1": {
                    "type": "number",
                    "default": 1.5,
                    "minimum": 1.0,
                    "maximum": 3.0,
                    "description": "H1 title font size multiplier relative to body size"
                },
                "rsvp.titleFontSizeH2": {
                    "type": "number",
                    "default": 1.3,
                    "minimum": 1.0,
                    "maximum": 3.0,
                    "description": "H2 title font size multiplier relative to body size"
                },
                "rsvp.titleFontSizeH3": {
                    "type": "number",
                    "default": 1.15,
                    "minimum": 1.0,
                    "maximum": 3.0,
                    "description": "H3 title font size multiplier relative to body size"
                },
                "rsvp.titlePauseDuration": {
                    "type": "number",
                    "default": 500,
                    "minimum": 0,
                    "maximum": 3000,
                    "description": "Pause duration in milliseconds after title chunks"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "compile:test": "tsc -p ./tsconfig.test.json",
        "watch": "tsc -watch -p ./",
        "build": "node esbuild.config.js",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package"
    },
    "dependencies": {
        "epubjs": "^0.3.88",
        "pdf-parse": "^1.1.1"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "^20.0.0",
        "@types/pdf-parse": "^1.1.5",
        "@types/vscode": "^1.85.0",
        "@vscode/test-electron": "^2.3.0",
        "@vscode/vsce": "^2.22.0",
        "esbuild": "^0.19.0",
        "glob": "^10.0.0",
        "mocha": "^10.0.0",
        "typescript": "^5.3.3"
    }
}